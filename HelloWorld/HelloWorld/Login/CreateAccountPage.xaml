<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloWorld.Login.CreateAccountPage">
    <ContentPage.Content>
        <StackLayout  HorizontalOptions ="CenterAndExpand" >
            <Label Text="Create Login!" FontSize="Large"/>
            <StackLayout VerticalOptions="CenterAndExpand">
                <Entry Placeholder="First Name"/>
                <Entry Placeholder="Last name"/>
                <Entry Placeholder="Username"/>
                <Entry Placeholder="Password" IsPassword="True"/>
                <Entry Placeholder="Re-Enter Password" IsPassword="True"/>
                <Entry Placeholder="Email"/>
                <Entry Placeholder="Confirm Email"/>
                <Button Text="Create Account" Clicked="OnClicked" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>